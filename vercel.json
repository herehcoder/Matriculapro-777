{
  "version": 2,
  "builds": [
    { "src": "apps/api/index.ts", "use": "@vercel/node" },
    { "src": "apps/web/package.json", "use": "@vercel/next" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "apps/api/index.ts" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "apps/web/$1" }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}